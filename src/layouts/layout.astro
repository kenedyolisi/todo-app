---
import "@styles/global.css";

interface Props {
  title: string;
}

const { title }: Props = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
  </head>
  <body class="bg-gray-100 text-slate-900 dark:bg-slate-900 dark:text-gray-100">
    <slot />
  </body>
</html>
